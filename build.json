{
  "builders": [
    {
      "type": "docker",
      "image": "debian:9",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y ansible"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "local/debian",
      "tag": "latest"
    }
  ]
}
